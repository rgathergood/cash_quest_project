<h2>Edit Transaction</h2>

<form action="/transactions/<%= @transaction.id %>" method="post">

  <label for="amount">Amount: </label>
  <input id="amount" value="<%= @transaction.amount() %>" type="number" name="amount" min="0"/>

  <label for="merchant" type="text" name="merchant">Merchant: </label>
  <select id="merchant" selected="<%= @transaction.merchant.name %>" name="merchant_id">
    <% @merchants.each do |merchant| %>
      <% if merchant.id == @transaction.merchant.id %>
        <option value=<%= merchant.id %>selected><%= merchant.name %></option>
      <% else %>
        <option value=<%= merchant.id %>><%= merchant.name %></option>
      <% end %>
    <% end %>
  </select>

  <label for="category">Category: </label>
  <select id="category" selected="<%= @transaction.category.type %>" name="category_id">
    <% @categories.each do |category| %>
      <% if category.id == @transaction.category.id %>
        <option value=<%= category.id %>selected><%= category.type %></option>
      <% else %>
        <option value=<%= category.id %>><%= category.type %></option>
      <% end %>
    <% end %>
  </select>

  <input type="submit" value="Update transaction">

</form>

<p id="bottom-links" > <a href="/transactions">Return to Transactions</a> </p>
