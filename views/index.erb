<h2> Total Spend: <%= @total %> </h2>

<table>
  <tr>
    <th>Amount</th>
    <td>|</td>
    <th>Merchant</th>
    <td>|</td>
    <th>Category</th>
    <td>|</td>
    <th>Update</th>
  </tr>
  <% @transactions.each do |transaction| %>
  <tr>
    <td> <%= transaction.amount() %> </td>
    <td>|</td>
    <td> <%= transaction.merchant.name() %> </td>
    <td>|</td>
    <td> <%= transaction.tag.type() %> </td>
    <td>|</td>
    <td> <a href="/cash-quest/<%= transaction.id %>">Update</a> </td>
  </tr>
  <% end %>
</table>
